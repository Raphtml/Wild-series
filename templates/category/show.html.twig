{% extends "base.html.twig" %}

{% block body %}
    {% for program in programs %}
        <div>
            <h2>Série #{{ program.id }} / <a href="{{ path("program_show", { id: program.id }) }}">{{ program.title }}</a></h2>
            <p>{{ program.summary }}</p>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
{% endblock body %}