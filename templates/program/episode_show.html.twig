{% extends 'base.html.twig' %}

{% block body %}
    <h3>{{ program.title }}</h3>
    <h3>Saison n°{{ season.number }}</h3>
    <h3>Épisode n°{{ episode.number }} : {{ episode.title }}</h3>
    <p>{{ episode.synopsis }}</p>

    <div>
        <h2>Comments</h2>
        {% for comment in episode.comments|reverse %}
            <div>
                <h4>{{ comment.author.email }}</h4>
                <p>{{ comment.comment }}</p>
                <p>Rate : {{ comment.rate }}</p>
            </div>
        {% endfor %}
        {% if app.user %}
            <h3>Add a comment !</h3>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button >{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        {% endif %}
    </div>
{% endblock body %}