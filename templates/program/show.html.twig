{% extends "base.html.twig" %}

{% block title %}
    {{ program.title }}
{% endblock title %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
    </div>

     <div>
        {% for season in seasons %}
            <a href="{{ path('program_season_show', {program : program.id, season : season.id}) }}"><h3>Saison {{ season.number }} :</h3></a>
            <p>{{ season.description }}</p>
            <h4>Année de sortie : {{ season.year }}</h4>
        {% else %}
            Aucune saison trouvée pour {{ program.title }}
        {% endfor %}
    </div>


    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>

    <strong>Acteurs :</strong>
    <ul>
        {% for actor in program.actors %}
            <a href="{{ path('actor_show', {id:actor.id}) }}"><li>{{ actor.name }} </li></a>
        {% else %}
            <li>Aucun acteur pour cette série</li>
        {% endfor %}
    </ul>
{% endblock body %}