{% extends 'base.html.twig' %}

{% block title %}
    {{ actor.name }}
{% endblock title %}

{% block body %}
    <strong>Séries :</strong>
    <ul>
        {% for program in actor.programs %}
            <a href="{{ path('program_show', {id:program.id}) }}"><li>{{ program.title }} </li></a>
        {% else %}
            <li>Aucune série pour cet acteur</li>
        {% endfor %}
    </ul>
{% endblock body %}